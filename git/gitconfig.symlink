# gitconfig
[user]
	name = Matt Hagner
	email = web@matthagner.com
[alias]
	cob = checkout -b
	s = status --short
	ss = status
	br = branch -v
  conflicted = '!vim +Conflicted'
  fza = "!git ls-files -m -o --exclude-standard | fzf --preview 'bat --color=always {}' --print0 -m | xargs -0 -t -o git add"
[color]
	ui = auto
[init]
	templatedir = ~/.git_template
